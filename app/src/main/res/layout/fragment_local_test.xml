<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/firstClock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="第一种时钟效果"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondClock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="第二种时钟效果"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/break_vip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="VIP视频破解"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/progress_circle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="圆形进度条"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/progress_scale_circle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="刻度圆进度条"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gesture_zoom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="手势缩放字体"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/full_screen_status_test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="可折叠状态栏"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="侧滑菜单"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/apk_checkout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="完整性检验"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_print_service"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="打印所有服务"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_open_gl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_item_bg">

            <TextView
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:gravity="center_vertical"
                android:text="OpenGl实战"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
