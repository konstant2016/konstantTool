<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomLinearLayout">
        <attr name="content_text" format="string"/>
    </declare-styleable>
    <declare-styleable name="WheelView">
        <attr name="unitHeight" format="dimension" />
        <attr name="itemNumber" format="integer"/>

        <attr name="normalTextColor" format="color" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedTextSize" format="dimension" />

        <attr name="lineColor" format="color" />
        <attr name="lineHeight" format="dimension" />

        <attr name="maskHeight" format="dimension"/>
        <attr name="noEmpty" format="boolean"/>
        <attr name="isEnable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <!--上层圆的颜色-->
        <attr name="upperColor1" format="color|reference" />
        <attr name="upperColor2" format="color|reference" />
        <attr name="upperColor3" format="color|reference" />
        <!--上层圆的线宽-->
        <attr name="upperLineWidth" format="dimension|reference" />

        <!--下层圆的颜色-->
        <attr name="lowerColor" format="color|reference" />
        <!--下层圆的线宽-->
        <attr name="lowerLineWidth" format="dimension|reference" />

        <!--阴影线宽-->
        <attr name="shadowLineWidth" format="dimension|reference" />
        <!--阴影颜色-->
        <attr name="shadowColor" format="color|reference" />

        <!--开始绘制角度-->
        <attr name="startAngle" format="float" />
        <!--结束绘制角度-->
        <attr name="sweepAngle" format="float" />
        <!--数值大小(默认最大值为10000)-->
        <attr name="value" format="dimension|reference" />
    </declare-styleable>

    <!-- 带分割线的圆环进度条 -->
    <declare-styleable name="ScaleProgress">
        <!--阴影颜色-->
        <attr name="scaleShadowColor" format="color|reference" />
        <!--未选中的刻度颜色-->
        <attr name="normalColor" format="color|reference" />
        <!--已选中的刻度开始颜色-->
        <attr name="scaleStartColor" format="color|reference" />
        <!--已选中的刻度结束颜色-->
        <attr name="scaleStopColor" format="color|reference" />
        <!--刻度线的宽度-->
        <attr name="scaleWhdth" format="dimension|reference" />
        <!--刻度线的长度-->
        <attr name="scaleHeight" format="dimension|reference" />
        <!--刻度线的数量-->
        <attr name="scaleNumber" format="integer|reference" />
        <!--阴影的宽度-->
        <attr name="shadowWidth" format="dimension|reference" />
        <!--动画持续时间-->
        <attr name="animDuration" format="integer|reference" />

    </declare-styleable>

    <declare-styleable name="WeatherLineView">
        <!-- 文字大小 -->
        <attr name="temperTextSize" format="dimension"/>
        <!-- 文字的颜色 -->
        <attr name="weatextColor" format="color"/>
        <!-- 绘制的线的宽度 -->
        <attr name="weaLineWidth" format="dimension"/>
        <!-- 绘制的圆点的半径 -->
        <attr name="weadotRadius" format="dimension"/>
        <!-- 文字离圆点的距离 -->
        <attr name="textDotDistance" format="dimension"/>
    </declare-styleable>

</resources>