<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="tool_main_color" format="color" />
    <attr name="tool_main_text_color" format="color" />
    <attr name="tool_second_text_color" format="color" />
    <attr name="tool_theme_text_color" format="color" />
    <attr name="tool_divider_color" format="color" />
    <attr name="tool_main_bg_color" format="color" />
    <attr name="tool_edit_bg_color" format="color" />
    <attr name="tool_btn_pressed_color" format="color" />

    <declare-styleable name="KonstantRulerView">
        <attr name="color_line" format="color" />
        <attr name="color_background" format="color" />
    </declare-styleable>

    <declare-styleable name="KonstantPageIndicator">
        <attr name="dotDiameter" format="dimension" />
        <attr name="dotGap" format="dimension" />
        <attr name="animationDuration" format="integer" />
        <attr name="pageIndicatorColor" format="color" />
        <attr name="currentPageIndicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="title" format="string" />
        <attr name="subTitle" format="string" />
        <attr name="showHint" format="boolean" />
        <attr name="showMore" format="boolean" />
        <attr name="showSwitch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DiffuseView">
        <attr name="diffuse_color" format="color" />
        <attr name="diffuse_coreColor" format="color" />
        <attr name="diffuse_coreImage" format="reference" />
        <attr name="diffuse_coreRadius" format="float" />
        <attr name="diffuse_width" format="integer" />
        <attr name="diffuse_maxWidth" format="integer" />
        <attr name="diffuse_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="SegmentControl">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="normalColor" format="color|reference" />
        <attr name="selectedColor" format="color|reference" />
        <attr name="backgroundColors" format="color|reference" />
        <attr name="textColors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="android:orientation" />
        <attr name="boundWidth" format="dimension|reference" />
        <attr name="separatorWidth" format="dimension|reference" />
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="upperColor" format="color|reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="current" format="integer|reference" />
        <attr name="total" format="integer|reference" />
        <attr name="lineWidth" format="reference|dimension" />
    </declare-styleable>

</resources>