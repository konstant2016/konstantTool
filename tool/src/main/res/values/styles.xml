<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/class_S</item>
        <item name="colorPrimaryDark">@color/class_S</item>
        <item name="colorAccent">@color/class_S</item>
        <item name="tool_main_color">@color/class_S</item>
        <item name="android:listDivider">@color/class_S</item>
    </style>

    <style name="tool_lite_blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="tool_main_color">@color/colorPrimary</item>
        <item name="android:listDivider">@color/colorPrimary</item>
    </style>

    <style name="tool_lite_class" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/class_S</item>
        <item name="colorPrimaryDark">@color/class_S</item>
        <item name="colorAccent">@color/class_S</item>
        <item name="tool_main_color">@color/class_S</item>
        <item name="android:listDivider">@color/class_S</item>
    </style>

    <style name="tool_lite_red" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="tool_main_color">@color/red</item>
        <item name="android:listDivider">@color/red</item>
    </style>

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/anim_top_to_bottom</item>
    </style>


    <style name="KonstantDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SplashActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/class_S</item>
        <item name="colorPrimaryDark">@color/class_S</item>
        <item name="colorAccent">@color/class_S</item>
        <item name="tool_main_color">@color/class_S</item>
        <item name="android:listDivider">@color/class_S</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="WechatFakeActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/class_S</item>
        <item name="colorPrimaryDark">@color/class_S</item>
        <item name="colorAccent">@color/class_S</item>
        <item name="tool_main_color">@color/class_S</item>
        <item name="android:listDivider">@color/class_S</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!--透明主题-->
    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
