<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_life_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="较少开启"
        android:textColor="?attr/tool_main_text_color"
        android:textSize="14sp" />

    <com.konstant.tool.lite.view.KonstantTextView
        android:layout_marginEnd="15dp"
        android:id="@+id/tv_life_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="您将感到很舒适，一般不需要开启空调。"
        android:textColor="?attr/tool_second_text_color"
        android:textSize="14sp" />

</LinearLayout>