<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_theme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_theme" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_header" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_swipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:subTitle="@string/setting_swipe_back_describe"
            app:title="@string/setting_swipe_back" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_language"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:subTitle="@string/setting_language_describe"
            app:title="@string/setting_language" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_browser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:subTitle="@string/setting_browser_describe"
            app:title="@string/setting_browser" />

        <RelativeLayout
            android:id="@+id/layout_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground">

            <TextView
                android:id="@+id/tv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="@string/setting_prevent_exit"
                android:textColor="?attr/tool_main_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_exit"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:text="@string/setting_prevent_exit_describe"
                android:textColor="?attr/tool_second_text_color"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switch_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:thumb="@drawable/selector_switch_thumb"
                android:track="@drawable/selector_switch_track" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="?attr/tool_divider_color" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_kill"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground">

            <TextView
                android:id="@+id/tv_kill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="@string/setting_kill"
                android:textColor="?attr/tool_main_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_kill"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:text="@string/setting_kill_describe"
                android:textColor="?attr/tool_second_text_color"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switch_kill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:thumb="@drawable/selector_switch_thumb"
                android:track="@drawable/selector_switch_track" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="?attr/tool_divider_color" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground">

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="@string/setting_update_auto"
                android:textColor="?attr/tool_main_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_update"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:text="@string/setting_update_auto_describe"
                android:textColor="?attr/tool_second_text_color"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switch_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:thumb="@drawable/selector_switch_thumb"
                android:track="@drawable/selector_switch_track" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="?attr/tool_divider_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_collect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground">

            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="@string/setting_show_collection"
                android:textColor="?attr/tool_main_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_collect"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:text="@string/setting_show_collection_describe"
                android:textColor="?attr/tool_second_text_color"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switch_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:thumb="@drawable/selector_switch_thumb"
                android:track="@drawable/selector_switch_track" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="?attr/tool_divider_color" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_dark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground">

            <TextView
                android:id="@+id/tv_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="@string/setting_adapter_dark_mode"
                android:textColor="?attr/tool_main_text_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dark"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:text="@string/setting_adapter_dark_mode_describe"
                android:textColor="?attr/tool_second_text_color"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/switch_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                android:thumb="@drawable/selector_switch_thumb"
                android:track="@drawable/selector_switch_track" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="?attr/tool_divider_color" />
        </RelativeLayout>

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_share" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_about_title" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
