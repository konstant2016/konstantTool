<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_theme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_theme" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_header" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_swipe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:subTitle="@string/setting_swipe_back_describe"
            app:title="@string/setting_swipe_back" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_language"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:subTitle="@string/setting_language_describe"
            app:title="@string/setting_language" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_browser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:subTitle="@string/setting_browser_describe"
            app:title="@string/setting_browser" />

        <com.konstant.tool.lite.view.ItemView
            app:showSwitch="true"
            android:id="@+id/layout_exit"
            app:subTitle="@string/setting_prevent_exit_describe"
            app:title="@string/setting_prevent_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.konstant.tool.lite.view.ItemView
            app:showSwitch="true"
            android:id="@+id/layout_kill"
            app:title="@string/setting_kill"
            app:subTitle="@string/setting_kill_describe"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.konstant.tool.lite.view.ItemView
            app:showSwitch="true"
            android:id="@+id/layout_update"
            app:subTitle="@string/setting_update_auto_describe"
            app:title="@string/setting_update_auto"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.konstant.tool.lite.view.ItemView
            app:showSwitch="true"
            android:id="@+id/layout_express"
            app:subTitle="@string/setting_prevent_express_describe"
            app:title="@string/setting_prevent_express"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.konstant.tool.lite.view.ItemView
            app:showSwitch="true"
            android:id="@+id/layout_collect"
            app:subTitle="@string/setting_show_collection_describe"
            app:title="@string/setting_show_collection"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.konstant.tool.lite.view.ItemView
            app:showSwitch="true"
            android:id="@+id/layout_dark"
            app:subTitle="@string/setting_adapter_dark_mode_describe"
            app:title="@string/setting_adapter_dark_mode"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.konstant.tool.lite.view.ItemView
            app:showSwitch="true"
            android:id="@+id/layout_scale"
            app:title="@string/setting_scale"
            app:subTitle="@string/setting_scale_describe"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_reset_tips" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_share"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_share" />

        <com.konstant.tool.lite.view.ItemView
            android:id="@+id/layout_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="@string/setting_about_title" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
