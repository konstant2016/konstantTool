<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <TextView
        android:textColor="?attr/tool_main_text_color"
        android:id="@+id/tv_set_adverse_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="设置对方昵称"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_divider_color" />

    <TextView
        android:textColor="?attr/tool_main_text_color"
        android:id="@+id/tv_set_adverse_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="设置对方头像"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_divider_color" />

    <TextView
        android:textColor="?attr/tool_main_text_color"
        android:id="@+id/tv_set_mine_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="设置我的头像"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_divider_color" />

    <TextView
        android:textColor="?attr/tool_main_text_color"
        android:id="@+id/tv_state_change"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="切换输入框"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_divider_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_black_20" />

</LinearLayout>