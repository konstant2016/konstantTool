<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/tool_main_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_camera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="拍照"
        android:textColor="?attr/tool_main_text_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_divider_color" />

    <TextView
        android:textColor="?attr/tool_main_text_color"
        android:id="@+id/text_photo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="相册" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_divider_color" />

    <TextView
        android:textColor="?attr/tool_main_text_color"
        android:id="@+id/text_default"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="恢复默认" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_divider_color" />

</LinearLayout>