<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="?attr/tool_main_bg_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_main_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_btn"
            android:text="@string/base_cancel"
            android:textColor="?attr/tool_main_text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/weather_city_manager_city_picker"
            android:textColor="?attr/tool_main_text_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_confirm"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_btn"
            android:text="@string/base_confirm"
            android:textColor="?attr/tool_main_text_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_province"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_color="?attr/tool_second_text_color"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_theme_text_color"
            app:wheel_visible_item_count="3" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_city"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_color="?attr/tool_second_text_color"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_theme_text_color"
            app:wheel_visible_item_count="3" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_direct"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_color="?attr/tool_second_text_color"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_theme_text_color"
            app:wheel_visible_item_count="3" />
    </LinearLayout>

</LinearLayout>