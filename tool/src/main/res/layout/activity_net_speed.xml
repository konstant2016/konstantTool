<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="@string/speed_describe"
        android:textColor="?attr/tool_second_text_color" />

    <TextView
        android:id="@+id/current_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="@string/speed_input_size_describe"
        android:textColor="?attr/tool_second_text_color"
        android:textSize="13sp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/view_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="30dp"
        android:max="45"
        android:progress="5" />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:text="0%"
        android:textColor="?attr/tool_second_text_color"
        android:textSize="16sp" />

    <com.konstant.tool.lite.view.KonstantCircleView
        android:id="@+id/view_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        app:backgroundColor="?attr/tool_divider_color"
        app:lineWidth="5dp"
        app:upperColor="?attr/tool_main_color" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:text="0.0MB/S"
        android:textColor="?attr/tool_theme_text_color"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_start"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:background="@drawable/selector_btn"
        android:text="@string/speed_button_start"
        android:textColor="?attr/tool_main_text_color"
        android:textStyle="bold" />

</RelativeLayout>