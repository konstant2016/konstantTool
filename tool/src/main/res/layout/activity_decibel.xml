<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="提示：室内静音分贝为 30 DB"
        android:textColor="?attr/tool_second_text_color" />

    <TextView
        android:id="@+id/tv_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="当前最大分贝：0DB"
        android:textColor="?attr/tool_second_text_color" />

    <TextView
        android:id="@+id/tv_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="当前最小分贝：0DB"
        android:textColor="?attr/tool_second_text_color" />

    <com.konstant.tool.lite.view.DiffuseView
        android:id="@+id/view_wave"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        app:diffuse_color="?attr/tool_main_color"
        app:diffuse_coreColor="?attr/tool_main_color"
        app:diffuse_coreRadius="80"
        app:diffuse_maxWidth="500"
        app:diffuse_speed="2"
        app:diffuse_width="8" />

    <TextView
        android:id="@+id/current_value"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="---"
        android:textColor="@color/color_white"
        android:textSize="18sp" />

</RelativeLayout>