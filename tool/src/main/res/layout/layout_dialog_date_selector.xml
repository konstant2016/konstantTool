<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <Button
        android:id="@+id/btn_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn"
        android:text="取消"
        android:textColor="?attr/tool_main_text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="选择日期"
        android:textColor="?attr/tool_main_text_color"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="2010年12月12日"
        android:textColor="?attr/tool_main_text_color"
        android:textSize="15sp" />


    <Button
        android:id="@+id/btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/selector_btn"
        android:text="确定"
        android:textColor="?attr/tool_main_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="55dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_year"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_color="?attr/tool_second_text_color"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_theme_text_color"
            app:wheel_visible_item_count="3" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_month"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3"
            app:wheel_cyclic="true"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_color="?attr/tool_second_text_color"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_theme_text_color"
            app:wheel_visible_item_count="3" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_day"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="3"
            app:wheel_cyclic="true"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_color="?attr/tool_second_text_color"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_theme_text_color"
            app:wheel_visible_item_count="3" />

    </LinearLayout>

</RelativeLayout>