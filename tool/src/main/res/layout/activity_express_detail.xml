<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--加载页面-->
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:textColor="?attr/tool_second_text_color"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-50dp"
            android:gravity="center"
            android:text="正在加载中。。。" />

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateTint="?attr/tool_main_color" />

    </LinearLayout>


    <!--数据展示页面-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="保密物件"
            android:textColor="?attr/tool_main_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_state_express"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="在途中"
            android:textColor="?attr/tool_main_text_color" />

        <TextView
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:text="顺丰速运：1232423456323"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/tv_describe"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/tool_divider_color" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/layout_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_divider"
            android:visibility="visible" />

    </RelativeLayout>


    <!--出错页面-->
    <LinearLayout
        android:id="@+id/layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:textColor="?attr/tool_second_text_color"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="查询无数据，请检查：" />

        <TextView
            android:textColor="?attr/tool_second_text_color"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="1、运单号填写正确" />

        <TextView
            android:textColor="?attr/tool_second_text_color"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="2、网络正常" />

        <Button
            android:textColor="?attr/tool_main_text_color"
            android:id="@+id/btn_retry"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_btn"
            android:text="重试" />
    </LinearLayout>

</RelativeLayout>
