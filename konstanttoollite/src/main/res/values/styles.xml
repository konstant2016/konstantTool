<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tool_main_color">@color/colorPrimary</item>
    </style>

    <style name="tool_lite_blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tool_main_color">@color/colorPrimary</item>
        <item name="android:listDivider">@color/colorPrimary</item>
    </style>

    <style name="tool_lite_class" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tool_main_color">@color/class_S</item>
        <item name="android:listDivider">@color/class_S</item>
    </style>

    <style name="tool_lite_red" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tool_main_color">@color/red</item>
        <item name="android:listDivider">@color/red</item>
    </style>

    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/anim_top_to_bottom</item>
    </style>

</resources>
