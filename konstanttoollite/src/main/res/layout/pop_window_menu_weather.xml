<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="?attr/tool_main_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_cancel"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_btn"
            android:text="取消" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="选择城市"
            android:textSize="15sp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_confirm"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_btn"
            android:text="确定" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_province_new"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_main_color"
            app:wheel_visible_item_count="3" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_city_new"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_main_color"
            app:wheel_visible_item_count="3" />

        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/picker_direct_new"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            app:wheel_indicator="true"
            app:wheel_indicator_color="?attr/tool_main_color"
            app:wheel_indicator_size="2px"
            app:wheel_item_text_size="18sp"
            app:wheel_selected_item_position="1"
            app:wheel_selected_item_text_color="?attr/tool_main_color"
            app:wheel_visible_item_count="3" />
    </LinearLayout>

</LinearLayout>