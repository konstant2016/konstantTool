<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="30dp">

    <Button
        android:id="@+id/btn_exo_local"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="EXO内核播放本地视频"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_exo_online"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="EXO内核播放在线视频"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_ijk_local"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:text="IJK内核播放本地视频"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_ijk_online"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="IJK内核播放在线视频"
        android:textSize="18sp" />

</LinearLayout>