<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_bg_dialog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_white_left_radius_8"
        app:layout_constraintBottom_toBottomOf="@id/recycler_view_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_title" />

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="249dp"
        android:layout_height="64dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:src="@drawable/img_recommend_goods_title"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_dialog"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_dialog"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/img_title"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_dialog"
        app:layout_constraintTop_toTopOf="@id/img_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/bottom_space"
        app:layout_constraintEnd_toStartOf="@id/right_space"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/bottom_space"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/right_space"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

