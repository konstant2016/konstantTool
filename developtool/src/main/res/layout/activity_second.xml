<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <com.konstant.develop.test.RecommendGoodsView
        android:id="@+id/recommend_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/show_box"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="设置数据"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cleaner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="清除数据"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_box" />

    <Button
        android:id="@+id/show_recommend"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="显示推荐商品"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cleaner" />

</androidx.constraintlayout.widget.ConstraintLayout>