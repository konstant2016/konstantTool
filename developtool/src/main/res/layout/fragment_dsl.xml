<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <EditText
        android:id="@+id/et_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/btn_create"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_btn_normal"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_default"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_selector_btn"
        android:gravity="center"
        android:text="加载默认页面"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_create"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_create"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_selector_btn"
        android:gravity="center"
        android:text="识别输入文本"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_default" />

</androidx.constraintlayout.widget.ConstraintLayout>